{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "#shared/*": [
                "src/*"
            ]
        },
        "rootDirs": [
            "src",
            "themes"
        ]
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src"
    ]
}
